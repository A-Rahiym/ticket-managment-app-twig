{% extends "base.twig" %}

{% block title %}Sign Up - Ticket Management System{% endblock %}

{% block content %}
<div class="min-h-screen flex items-center justify-center px-6 py-12">
    <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-accent/5 to-background -z-10"></div>
    
    <div class="w-full max-w-md">
        <div class="bg-card rounded-3xl border border-border/50 shadow-2xl p-8">
            <!-- Back to Dashboard Button -->
            <div class="mb-6">
                <a href="/" class="inline-flex items-center text-sm text-primary hover:underline">
                    <i data-lucide="arrow-left" class="w-5 h-5 mr-2"></i> 
                </a>
            </div>

            <!-- Header -->
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl gradient-purple-pink mb-6">
                    <i data-lucide="ticket" class="w-8 h-8 text-white"></i>
                </div>
                <h2 class="mb-2">Create Account</h2>
                <p class="text-muted-foreground">Start managing your tickets today</p>
            </div>

            <!-- Form -->
            <form id="signupForm" class="space-y-5">
                <div>
                    <label for="name" class="block text-sm mb-1.5">Full Name</label>
                    <input
                        id="name"
                        name="name"
                        type="text"
                        required
                        class="w-full mt-1.5 h-12 rounded-xl border border-border bg-background px-4 focus:outline-none focus:ring-2 focus:ring-primary"
                        placeholder="John Doe"
                    />
                </div>

                <div>
                    <label for="email" class="block text-sm mb-1.5">Email</label>
                    <input
                        id="email"
                        name="email"
                        type="email"
                        required
                        class="w-full mt-1.5 h-12 rounded-xl border border-border bg-background px-4 focus:outline-none focus:ring-2 focus:ring-primary"
                        placeholder="you@example.com"
                    />
                </div>

                <div>
                    <label for="password" class="block text-sm mb-1.5">Password</label>
                    <input
                        id="password"
                        name="password"
                        type="password"
                        required
                        minlength="6"
                        class="w-full mt-1.5 h-12 rounded-xl border border-border bg-background px-4 focus:outline-none focus:ring-2 focus:ring-primary"
                        placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                    />
                </div>

                <button
                    type="submit"
                    class="w-full h-12 rounded-xl gradient-purple-pink border-2 border-neon-green shadow-lg hover:shadow-neon-green/20 text-white transition-all"
                >
                    Create Account
                </button>
            </form>

            <!-- Footer -->
            <div class="mt-6 text-center">
                <p class="text-sm text-muted-foreground">
                    Already have an account? 
                    <a href="/login" class="text-primary hover:underline">Sign in</a>
                </p>
            </div>
        </div>
    </div>
</div>

<script>
// ðŸ§© Intercept signup form submission to use fetch() and persist session
document.getElementById('signupForm').addEventListener('submit', async (e) => {
  e.preventDefault();
  const formData = new FormData(e.target);

  try {
    const res = await fetch('/signup?json=1', { method: 'POST', body: formData });
    const data = await res.json();

    if (data.status === 'success') {
      // ðŸŸ¢ Save user session to localStorage
      localStorage.setItem('ticketapp_session', JSON.stringify(data.user));
      alert('Account created successfully!');
      window.location.href = '/dashboard';
    } else {
      alert(data.message || 'Signup failed. Please check your input.');
    }
  } catch (err) {
    alert('Signup failed. Please try again.');
  }
});
</script>
{% endblock %}